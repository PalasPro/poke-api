<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokeapi" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_background</item>

        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">0</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo_splash</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/colorSecondaryDark</item>
    </style>

    <style name="Theme.Pokeapi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pokeapi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pokeapi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>